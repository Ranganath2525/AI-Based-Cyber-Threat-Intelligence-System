{
    "manifest_version": 3,
    "name": "CTI Scanner Suite",
    "version": "2.0",
    "description": "Scans emails, URLs, and performs live deepfake analysis on tab recordings.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabCapture",
        "offscreen",
        "notifications",
        "downloads",
        "tabs"
    ],
    "host_permissions": [
        "http://127.0.0.1:5000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon48.png"
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*", "https://outlook.live.com/*"],
            "js": ["content_scanner.js"]
        },
        {
            "matches": ["https://mail.google.com/*", "https://outlook.live.com/*"],
            "js": ["email_observer.js"],
            "run_at": "document_idle"
        }
    ]
}